{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "plugin:react-hooks/recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "import", "prettier"],
  "rules": {
    "react/jsx-uses-react": ["error"],
    "react/react-in-jsx-scope": ["off"],
    "no-case-declarations": ["off"],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/prop-types": [
      "off",
      {
        "ignore": [],
        "customValidators": null,
        "skipUndeclared": false
      }
    ],
    "react/no-array-index-key": ["off"],
    "react/jsx-no-useless-fragment": ["off"],
    "react/jsx-props-no-spreading": ["off"],
    "no-unsafe-optional-chaining": ["off"],
    "react/forbid-prop-types": ["off", null],
    "import/prefer-default-export": ["warn"],
    "default-param-last": ["off"],
    "no-nested-ternary": ["warn"],
    "no-unused-vars": ["warn"],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "react/function-component-definition": [2, { "namedComponents": "arrow-function" }],
    "curly": ["error", "multi-or-nest", "consistent"],
    "react/no-unknown-property": ["error", { "ignore": ["tooltip", "tooltipflow"]}]
  }
}